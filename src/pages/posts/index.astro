---
const pageTitle = "Bienvenido a mis Posts";

import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';

import { getCollection } from 'astro:content';

//Consultando Colecciones "/tips" ordenadas por fecha
const posts = (await getCollection("tips")).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
)

/* console.log(posts); */
---

<Layout title={pageTitle}>
	<main>		
		<Header title= {pageTitle} />		
		<Hero />	
		<!-- Enlaces de NavegaciÃ³n -->
		<a href="/">Inicio</a> | <a href="/about/">Sobre mi</a> | <a href="/posts/">Posts</a> | <a href="/contact/">Contacto</a>
		<hr><br>

		<ul role="list" class="link-card-grid">
			{
				posts.map((post) => (
					<Card
						title={post.data.title}
						time={post.data.pubDate}
						tags={post.data.tags}
                        slug={post.slug}
					/>
				))
			}
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
		
	
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
