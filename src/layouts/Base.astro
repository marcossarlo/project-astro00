---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="bg-slate-900 text-slate-400 text-2xl">
    <div class="flex-block max-w-xl p-4 md:pd-8 mx-auto mt-4">
        <div class="bg-white shadow rounded-lg p-10">
            <!-- donde va a vivir el contenido que va a estar encapsulado dentro de esta base -->
            <slot />
        </div>
    </div>
</body>
</html>
