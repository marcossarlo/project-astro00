---
const { platform, username } = Astro.props;
---

<a
  class="linkSocial"
  href={`https://www.${platform}.com/${username}`}
  target="_blank">{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
  a:hover,
  .nav-links a:focus {
    background-color: #86efac;
  }
</style>
